{
  "name": "gen-ts-lerna",
  "version": "0.7.0",
  "description": "A coge generator for building scaffold monorepos with Lerna and TypeScript tooling.",
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cogelab/gen-ts-lerna.git"
  },
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "lerna",
    "package",
    "template"
  ],
  "scripts": {
    "prerelease": "cross-env CI=1 npm run test",
    "release": "np --no-2fa",
    "build": "lb-tsc",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "coverage": "lb-nyc report --reporter=text-summary",
    "precoverage": "npm test",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "lb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "lb-clean dist coverage .nyc_output *.tsbuildinfo",
    "pretest": "npm run clean && npm run format",
    "test": "lb-nyc npm run mocha",
    "test:ci": "lb-nyc npm run mocha",
    "posttest": "npm run lint",
    "premocha": "npm run build",
    "mocha": "lb-mocha \"generators/__tests__/**/*.js\"",
    "preunit": "npm run build",
    "unit": "lb-mocha \"generators/__tests__/unit/**/*.js\""
  },
  "dependencies": {
    "coge-generator": "^0.5.0",
    "execa": "^5.1.1",
    "git-remote-origin-url": "^3.1.0",
    "micromatch": "^4.0.4",
    "parse-packagejson-name": "^1.0.1"
  },
  "devDependencies": {
    "@loopback/build": "^6.4.0",
    "@loopback/eslint-config": "^10.2.0",
    "@loopback/testlab": "^3.4.0",
    "@types/micromatch": "^4.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-plugin": "^3.0.3",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.4.0",
    "np": "^7.5.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  }
}
