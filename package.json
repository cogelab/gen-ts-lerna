{
  "name": "gen-ts-lerna",
  "version": "0.3.1",
  "description": "A coge generator for building scaffold monorepos with Lerna and TypeScript tooling.",
  "scripts": {
    "prerelease": "cross-env CI=1 npm run test",
    "release": "np",
    "build": "tib-tsc",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "coverage": "tib-nyc report --reporter=text-summary",
    "precoverage": "npm test",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "tib-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "tib-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "tib-clean dist coverage .nyc_output *.tsbuildinfo",
    "pretest": "npm run clean && npm run format",
    "test": "tib-nyc npm run mocha",
    "test:ci": "tib-nyc npm run mocha",
    "posttest": "npm run lint",
    "premocha": "npm run build",
    "mocha": "tib-mocha \"generators/__tests__/**/*.js\"",
    "preunit": "npm run build",
    "unit": "tib-mocha \"generators/__tests__/unit/**/*.js\""
  },
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "lerna",
    "package",
    "template"
  ],
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "dependencies": {
    "coge-generator": "^0.2.2",
    "execa": "^4.0.3",
    "git-remote-origin-url": "^3.1.0",
    "micromatch": "^4.0.2",
    "parse-packagejson-name": "^1.0.1"
  },
  "devDependencies": {
    "@tib/build": "^6.3.0",
    "@tib/eslint-config": "^8.2.0",
    "@tib/testlab": "^3.4.0",
    "@types/fs-extra": "^9.0.1",
    "@types/micromatch": "^4.0.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.26",
    "cross-env": "^7.0.2",
    "mocha": "^8.0.1",
    "np": "^6.3.2",
    "typescript": "^3.9.7"
  }
}
